{
  "name": "quickcalc",
  "version": "0.1.0",
  "description": "Cross-platform desktop application for structural beam analysis",
  "main": "frontend/main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "build": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "tailwindcss": "^3.3.0"
  },
  "dependencies": {
    "d3": "^7.8.0",
    "animejs": "^3.2.0"
  },
  "build": {
    "appId": "com.quickcalc.app",
    "files": [
      "**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 